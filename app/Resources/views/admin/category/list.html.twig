{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="well">
            <h2>All Categories -
                <a class="btn btn-sm btn-warning" href="{{ path('admin_categories_create') }}">Create New</a>
            </h2>
            <div class="row">
                <table class="table table-striped table-hover ">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}

                        <tr>
                        <tr>
                            <td>{{ category.id }}</td>
                            <td><a href="{{ path('category_articles', {'id': category.id}) }}">{{ category }} - ({{ category.articles.count }})</a></td>
                            <td>
                                <a class="btn btn-primary btn-xs" href={{ path('admin_categories_edit', {'id': category.id}) }}>Edit</a>
                                <a class="btn btn-danger btn-xs" href={{ path('admin_categories_delete', {'id': category.id}) }}>Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

{% endblock %}